<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.clickeat.restaurant.click_eatrestaurant.fragments.BotNavTabHome">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabsNav_bot_nav_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabGravity="fill"
        android:elevation="5dp"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/md_grey_500"
        app:tabPadding="0dp" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_bot_tab_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.clickeat.restaurant.click_eatrestaurant.customviews.UserTextView
        android:tag="200"
        android:id="@+id/tv_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="21sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="@string/nobookings"
        android:layout_margin="1dp"
        android:visibility="gone"/>

</LinearLayout>
