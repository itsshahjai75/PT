<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="3dp"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_awaiting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:background="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="5dp">

            <LinearLayout
                android:id="@+id/layoutDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txtListDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="07"
                    android:textSize="21sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtListMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="May"
                    android:textSize="19sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorBG" />

            <LinearLayout
                android:id="@+id/layoutDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_marginBottom="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtListName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="ALMA GRAVE"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtListEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_mail"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="email@email.com"
                    android:textColor="@color/md_grey_700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtListPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="+44 12345 426 125"
                    android:textColor="@color/md_grey_700"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_time_grey_24dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left|center"
                    android:text="05:00 AM to 06:00 AM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/ll_tableno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_tableno"
                        android:drawablePadding="10dp"
                        android:gravity="center|left"
                        android:text="Table No :  "
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/txtTableNo"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/round_corner_primary_filled"
                        android:text="07"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:text=""
                        android:textSize="12dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:drawableLeft="@drawable/ic_usergroup"
                            android:drawablePadding="5dp"
                            android:gravity="center|left"
                            android:text="Capacity :  "
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txtListPeople"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@drawable/circle_background"
                            android:text="07"
                            android:textColor="@color/white"
                            android:textSize="10dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:text=""
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:gravity="start">

                    <Button
                        android:id="@+id/btnListAccept"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:background="@drawable/round_corner_button_accept"
                        android:text="@string/confirm"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorGreen" />

                    <Button
                        android:id="@+id/btnListReject"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/round_corner_button_reject"
                        android:text="@string/unavailable"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/colorRed" />

                    <Button
                        android:id="@+id/btnListSuggest"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/round_corner_button_reject"
                        android:text="Suggest"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/md_yellow_900" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
