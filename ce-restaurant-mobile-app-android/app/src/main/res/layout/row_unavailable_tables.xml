<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="3dp"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_unavailableTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"

        card_view:cardUseCompatPadding="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:padding="3dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="From"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_700"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:src="@null"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="To"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_grey_700"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fromDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="31 MAY 12:00"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/md_grey_900"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:padding="2dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_arrow_forward_black_16dp"/>

                    <TextView
                        android:id="@+id/tvtoDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:text="31 MAY 12:00"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/md_grey_900"/>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="Floor No :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_700"/>

                <TextView
                    android:id="@+id/tvFloorrNo"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/circle_background_unavailabletable"
                    android:gravity="center"
                    android:text="07"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="Room No :"
                    android:layout_marginStart="5dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_700"/>

                <TextView
                    android:id="@+id/tvRoomNo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background_unavailabletable"
                    android:text="07"
                    android:layout_marginStart="2dp"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:layout_marginStart="5dp"
                    android:text="Table No :"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_grey_700"/>

                <TextView
                    android:id="@+id/tvTableNo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp"
                    android:background="@drawable/circle_background_unavailabletable"
                    android:text="07"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

            </TableRow>
            </TableLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:text="Reason"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvreason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginStart="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center|left"
                android:text="Reason"
                android:textColor="@color/md_grey_700"
                android:textSize="12sp" />



        </LinearLayout>


            <android.support.v7.widget.SwitchCompat
                android:id="@+id/swcAvialable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_gravity="center|end"
                android:gravity="center|end"
                android:checked="true"
                android:thumb="@drawable/switch_selector"
                card_view:switchMinWidth="20dp"
                card_view:switchPadding="10dp"
                android:textStyle="bold"
                android:background="@color/md_grey_200"
                android:text="@string/available"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
