<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="actionBarTheme">@style/ToolbarThemeWhite</item>
        <!--<item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>&ndash;&gt;-->
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarThemeWhite" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="spinner_style_signup">
        <item name="android:background">@drawable/spinner_style_signup</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:radioButtonStyle">@style/radio_button</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:checkMarkTint">@color/colorPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="radio_button">
        <item name="android:buttonTint">@color/colorPrimary</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinner_style_book">
        <item name="android:padding">5dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="navigation_menu_style">
        <item name="android:background">#ffff</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">14dp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemPaddingLeft">10dp</item>
        <item name="android:listDivider">@drawable/navigation_divider_style</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DashboardTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MyErrorText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!--Input field style-->
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:colorControlActivated">@color/colorBlack</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:selectableItemBackground">@anim/card_flip_left_in</item>
        <item name="bs_dividerColor">@color/abc_search_url_text_pressed</item>
        <item name="bs_numColumns">2</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="MyAppCompatDialogTheme" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="DialogMapTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MySeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">#ffff00</item>
    </style>

    <style name="spinner_style_borderless">
        <item name="android:background">@drawable/spinner_style_broderless</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_style</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorBlack</item>
    </style>

</resources>
