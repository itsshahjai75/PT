<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccounts.AddressForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtAddressType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_address_text"
            android:hint="@string/type_of_address"
            android:padding="5dp"
            android:text="Work Address"
            android:layout_margin="7dp"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edtAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_address_text"
            android:hint="@string/type_of_address"
            android:padding="5dp"
            android:layout_margin="7dp"
            android:textColor="@color/colorBlack"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnAddressSave"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/book_btn_style"
            android:text="@string/txt_save"
            android:textAllCaps="false"
            android:layout_margin="7dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>