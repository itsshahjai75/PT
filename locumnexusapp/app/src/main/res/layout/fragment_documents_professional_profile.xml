<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#50ffffff"
    tools:context="com.nexus.locum.locumnexus.fragments.DocumentsProfessionalProfile">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/img_upload_certificate"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/whiteApp"
                    android:src="@drawable/ic_upload"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/ic_delete_24dp"
                    android:scaleType="fitXY"/>

            </FrameLayout>



            <com.nexus.locum.locumnexus.customviews.UserTextView
                android:tag="200"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Registration Certificate"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_weight="0.20"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="200dp">

                <ImageView
                    android:background="@color/whiteApp"
                    android:id="@+id/img_upload_resume"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="200dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_upload"
                    android:scaleType="fitXY"/>

                <ImageView
                    android:id="@+id/img_delete_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|right"
                    android:src="@drawable/ic_delete_24dp"
                    android:scaleType="fitXY"/>

            </FrameLayout>


            <com.nexus.locum.locumnexus.customviews.UserTextView
                android:tag="200"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Latest Resume / CV"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>




    </LinearLayout>



    <com.nexus.locum.locumnexus.customviews.UserTextView
        android:id="@+id/tv_prefere"
        android:tag="200"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:text="Please Note"
        android:textSize="17sp"
        android:textColor="@color/black"/>

    <com.nexus.locum.locumnexus.customviews.UserTextView
        android:tag="100"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:text="Accept Type"
        android:textColor="@color/black"
        android:textSize="12sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <com.nexus.locum.locumnexus.customviews.UserTextView
            android:tag="100"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="DOC"
            android:textColor="@color/md_green_700"
            android:background="@drawable/round_corner_green"
            android:textSize="10sp"/>

        <com.nexus.locum.locumnexus.customviews.UserTextView
            android:tag="100"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="DOCX"
            android:textColor="@color/md_blue_700"
            android:background="@drawable/round_corner_skyblue"
            android:textSize="10sp"/>

        <com.nexus.locum.locumnexus.customviews.UserTextView
            android:tag="100"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="JPEG / PNG "
            android:textColor="@color/md_green_700"
            android:background="@drawable/round_corner_dark_green"
            android:textSize="10sp"/>

        <com.nexus.locum.locumnexus.customviews.UserTextView
            android:tag="100"
            android:layout_marginStart="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="PDF"
            android:textColor="@color/md_red_700"
            android:background="@drawable/round_corner_red"
            android:textSize="10sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.nexus.locum.locumnexus.customviews.UserTextView
        android:tag="100"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="File Size Max"
        android:textSize="12sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <com.nexus.locum.locumnexus.customviews.UserTextView
            android:tag="100"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="2 MB"
            android:textColor="@color/md_yellow_900"
            android:background="@drawable/round_corner_yellow"
            android:textSize="10sp"/>

        <Space
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
