<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteApp"
    tools:context="com.nexus.locum.locumnexus.fragments.MainPersonalProfile">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sw_layout"
        android:layout_above="@+id/footer"
        android:orientation="vertical">
        //your UI...

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.nexus.locum.locumnexus.LoginLocum">


            <RadioGroup
                android:id="@+id/rg_addressType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">

                <com.nexus.locum.locumnexus.customviews.UserTextView
                    android:tag="100"
                    android:id="@+id/tv_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address : "
                    android:textSize="17sp" />

                <RadioButton
                    android:id="@+id/rb_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="17sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rb_billing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Billing"
                    android:layout_marginStart="15dp"
                    android:textSize="17sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    />

            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_country"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/edit_text_bottom_border"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/sp_country"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:padding="0dp"
                    android:anyDensity="false"
                    android:layout_marginTop="3dp"/>

            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_housename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_housename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House Name"
                    android:textSize="17sp"
                    android:imeOptions="actionNext"
                    android:padding="7dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_housenumber"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_housenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="House Number"
                    android:inputType="number"
                    android:maxLength="11"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_addressline1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_addressline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 1"
                    android:inputType="text"
                    android:maxLength="100"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_addressline2"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_addressline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 2"
                    android:inputType="text"
                    android:maxLength="100"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_addressline3"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_addressline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 3"
                    android:inputType="text"
                    android:maxLength="100"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="17sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_town"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Town"
                    android:inputType="text"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_city"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:inputType="text"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_county"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_county"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="County"
                    android:inputType="text"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_postcode"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_postcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Postcode"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/cb_sameas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="Is the billing address the same as house address ?"/>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/whiteApp"
            android:background="@color/colorPrimary"
            android:text="save"
            android:textSize="17sp"
            android:padding="0dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>
