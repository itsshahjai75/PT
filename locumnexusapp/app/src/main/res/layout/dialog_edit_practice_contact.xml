<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.nexus.locum.locumnexus.customviews.UserTextView
        android:tag="200"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice Name "
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/TIL_Practicename"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.nexus.locum.locumnexus.customviews.UserEditText
            android:tag="100"
            android:hint="Enter Contact Name"
            android:id="@+id/et_practices_contactName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            

        </com.nexus.locum.locumnexus.customviews.UserEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.nexus.locum.locumnexus.customviews.UserEditText
            android:tag="100"
            android:id="@+id/et_email"
            android:hint="Enter Email Id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            

        </com.nexus.locum.locumnexus.customviews.UserEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TIL_practiceContactNumber"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.nexus.locum.locumnexus.customviews.UserEditText
            android:tag="100"
            android:id="@+id/et_contactNumber"
            android:hint="Enter Contact Number"
            android:maxLength="12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


        </com.nexus.locum.locumnexus.customviews.UserEditText>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/TIL_NHSPS_EA_Code"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.nexus.locum.locumnexus.customviews.UserEditText
            android:tag="100"
            android:imeOptions="actionDone"
            android:id="@+id/et_NHSPSNumber"
            android:hint="Enter NHSPS EA Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </com.nexus.locum.locumnexus.customviews.UserEditText>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>