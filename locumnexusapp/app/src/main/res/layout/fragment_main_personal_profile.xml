<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/whiteApp"
    tools:context="com.nexus.locum.locumnexus.fragments.MainPersonalProfile">

    <ScrollView android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/sw_layout"
        android:layout_above="@+id/footer"
        android:orientation="vertical">
        //your UI...

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/whiteApp"
            tools:context="com.nexus.locum.locumnexus.LoginLocum">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:orientation="horizontal">

                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="200"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center" />

                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="100"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": Miss."
                        android:textSize="15sp" />


                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="100"
                        android:id="@+id/tv_Name"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="FirstName    LastName"/>


                </TableRow>

                <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:orientation="horizontal">

                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="200"
                        android:id="@+id/tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Category "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center" />


                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="100"
                        android:id="@+id/tv_category"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_height="wrap_content"
                        android:text=": General Practice" />


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_300"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:orientation="horizontal">

                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="200"
                        android:id="@+id/tv_catTypeNumberTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GDC No "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center" />


                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="100"
                        android:id="@+id/tv_categoryNumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_height="wrap_content"
                        android:text=": 14785236" />


                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/md_grey_300"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

                <TableRow android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="5dp"
                    android:orientation="horizontal">

                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="200"
                        android:id="@+id/tv_e"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email Id "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center" />


                    <com.nexus.locum.locumnexus.customviews.UserTextView
                        android:tag="100"
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:layout_gravity="left|center"
                        android:gravity="left|center"
                        android:layout_height="wrap_content"
                        android:text=": jay@shah.com" />


                </TableRow>


            </TableLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"/>

            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">

                <com.nexus.locum.locumnexus.customviews.UserTextView
                    android:tag="200"
                    android:id="@+id/tv_extra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    android:checked="true"
                    android:clickable="false"
                    />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    android:clickable="false"
                    />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="1dp"
                    android:clickable="false"
                    />
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_preferedContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">

                <com.nexus.locum.locumnexus.customviews.UserTextView
                    android:tag="200"
                    android:id="@+id/tv_preferred_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferred Contact : "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/rb_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    android:checked="true"
                    />

                <RadioButton
                    android:id="@+id/rb_landline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Landline"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    />


            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_mobileno"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_mobileno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_landlineno"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_landlineno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Landline Number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:padding="7dp"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_NINumber"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_NINumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NI Number"
                    android:inputType="text"
                    android:maxLength="9"
                    android:padding="7dp"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_Qualification"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:id="@+id/et_Qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Qualifications"
                    android:focusable="false"
                    android:inputType="text"
                    android:maxLength="9"
                    android:padding="7dp"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>


            <!--<android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_catTypeNumber"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_catTypeNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_niNumber"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:id="@+id/et_niNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NI Number"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_qualification"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:background="@drawable/edit_text_bottom_border"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/sp_qualification"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill"
                    android:padding="0dp"
                    android:anyDensity="false"
                    android:layout_marginTop="3dp"/>

            </android.support.design.widget.TextInputLayout>

            <com.nexus.locum.locumnexus.customviews.UserTextView
                android:tag="200"
                android:id="@+id/tv_confirmlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm on Performer's List ? "
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp" />

            <RadioGroup
                android:id="@+id/rg_confirmlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">


                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    />

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="15sp"
                    android:textColor="@drawable/radio_group_selecter"
                    android:paddingRight="10dp"
                    />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_britishcitizen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">


                        <com.nexus.locum.locumnexus.customviews.UserTextView
                            android:tag="200"
                            android:id="@+id/tv_britishcitizen"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="British Citizen :"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <RadioButton
                            android:id="@+id/rb_britishcitizen_yes"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp"
                            />

                        <RadioButton
                            android:id="@+id/rb_britishcitizen_no"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp"
                            />


            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_eligible_uk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp"
                android:visibility="gone">


                        <com.nexus.locum.locumnexus.customviews.UserTextView
                            android:tag="200"
                            android:id="@+id/tv_eligible_uk"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Eligible to work in UK?"
                            android:textColor="@color/black"
                            android:textSize="15sp"/>


                        <RadioButton
                            android:id="@+id/rb_eligible_uk_yes"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp"
                            android:checked="true"
                            />

                        <RadioButton
                            android:id="@+id/rb_eligible_uk_no"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp"
                            />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg_inquiry_uk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="1dp"
                android:layout_marginStart="10dp">


                        <com.nexus.locum.locumnexus.customviews.UserTextView
                            android:tag="200"
                            android:id="@+id/tv_inquiry"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:textColor="@color/black"
                            android:text="Do you have any pending enquiry?"
                            android:textSize="15sp"/>

                        <RadioButton
                            android:id="@+id/rb_inquiry_yes"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp" />

                        <RadioButton
                            android:id="@+id/rb_inquiry_no"
                            android:layout_width="0dp"
                            android:layout_weight="0.35"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="15sp"
                            android:textColor="@drawable/radio_group_selecter"
                            android:paddingRight="10dp"/>


            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/TIL_inquiry"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="1000"
                android:textColorHint="@color/black">

                <com.nexus.locum.locumnexus.customviews.UserEditText
                    android:tag="100"
                    android:layout_gravity="left|top"
                    android:gravity="left|top"
                    android:lines="3"
                    android:maxLines="10"
                    android:singleLine="true"
                    android:id="@+id/et_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Profile Summary."
                    android:inputType="textMultiLine"
                    android:maxLength="1000"
                    android:padding="7dp"
                    android:imeOptions="actionDone"
                    android:textSize="15sp"
                    android:layout_margin="5dp"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/whiteApp"
            android:background="@color/colorPrimary"
            android:text="save"
            android:textSize="15sp"
            android:padding="0dp"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.01"
            android:background="@color/whiteApp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTint="@color/colorPrimaryDark"
            android:textColor="@color/whiteApp"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:textSize="15sp"
            android:padding="0dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
